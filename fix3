  <script>
    // ===== Language toggle =====
    const langBtn = document.getElementById('langBtn');
    langBtn.addEventListener('click', () => {
      document.body.classList.toggle('lang-en');
      // keep hash and active link highlighting unaffected
    });

    // ===== Mobile menu =====
    const hamburger = document.getElementById('hamburger');
    const mobileNav = document.getElementById('mobileNav');
    hamburger.addEventListener('click', () => {
      mobileNav.classList.toggle('active');
    });
    function closeMobile(){ mobileNav.classList.remove('active'); }
    window.closeMobile = closeMobile;

    // ===== Smooth scroll with offset =====
    const HEADER_OFFSET = 80;
    function scrollToHash(id){
      const el = document.getElementById(id);
      if (!el) return;
      const rect = el.getBoundingClientRect();
      const targetY = window.scrollY + rect.top - HEADER_OFFSET + 1;
      window.scrollTo({ top: targetY, behavior: 'smooth' });
    }
    document.querySelectorAll('a[href^="#"]').forEach(a => {
      a.addEventListener('click', (e) => {
        const hash = a.getAttribute('href');
        if (!hash || hash === '#') return;
        const id = hash.slice(1);
        e.preventDefault();
        history.pushState(null, '', hash);
        scrollToHash(id);
        mobileNav.classList.remove('active');
      });
    });

    // ===== Active nav link & hash handling =====
    const sections = Array.from(document.querySelectorAll('main section[id]'));
    const navLinks = Array.from(document.querySelectorAll('.nav-menu a[data-target]'));

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting){
          const id = entry.target.id;
          // Update active class
          navLinks.forEach(l => l.classList.toggle('active', l.dataset.target === id));
          // Update hash without scrolling
          if (location.hash !== '#' + id){
            history.replaceState(null, '', '#' + id);
          }
          // Update document title for accessibility / SEO
          const ja = entry.target.getAttribute('data-title-ja') || '';
          const en = entry.target.getAttribute('data-title-en') || '';
          document.title = document.body.classList.contains('lang-en') ? `ICE SYNTH - ${en}` : `ICE SYNTH - ${ja}`;
        }
      });
    }, { rootMargin: '-50% 0px -50% 0px', threshold: 0.01 });

    sections.forEach(s => observer.observe(s));

    // On load, jump to hash respecting offset (no double-scroll)
    window.addEventListener('load', () => {
      if (location.hash){
        const id = location.hash.slice(1);
        setTimeout(() => scrollToHash(id), 50);
      }
    });

    // ===== Contact form (dummy) =====
    const form = document.getElementById('contactForm');
    if (form){
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        alert('送信ありがとうございました！内容を受け付けました。');
        form.reset();
      });
    }
  </script>
